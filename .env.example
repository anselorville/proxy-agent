# Environment
APP_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/stock_data
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
AUTH_USERNAME=admin
AUTH_PASSWORD=change-this-in-production

# Proxy Configuration
PROXY_POOL_SIZE=5
REQUEST_INTERVAL=2
PROXY_TIMEOUT=30

# Retry Configuration
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Data Fetching
DATA_FETCH_BATCH_SIZE=50
FETCH_START_DATE=2021-01-01

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
